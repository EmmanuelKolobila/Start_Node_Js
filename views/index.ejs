<!DOCTYPE html>
<html lang="en">
 <%- include('./partials/head.ejs') %>
<body>
      <h1>INDEX PAGE</h1>
    <%- include('./partials/nav.ejs') %>
    <div>
        <h2>All Blogs</h2>


        <% if (blogs.length > 0 ) { %>
             <% blogs.forEach(blog => { %>

                <a class="single" href="/blogs/<%= blog._id %>">
                    <h3><%= blog.title %></h3>
                    <p><%= blog.snippet %></p>
                </a>

            <% }) %>
        <% } else { %> 
            <h1>No Blogs Available</h1>
       <% } %>
    </div>


    <%- include('./partials/footer.ejs') %>
</body>
</html>